`timescale 1ns / 1ps

module Random_TB;

// Parameters
parameter CLK_PERIOD = 10; // Clock period in ns

// Signals
logic clk;
logic enable;
logic [4:0] rand_num;

// Instantiate the module under test
Random dut (
    .clk(clk),
    .enable(enable),
    .rand_num(rand_num)
);

// Clock generation
always #((CLK_PERIOD)/2) clk = ~clk;

// Stimulus generation
initial begin
    clk = 0;
    enable = 0;
    #100; // Wait for initial stabilization

    // Enable the random number generation
    enable = 1;
    #100; // Wait for some time

    // Disable the random number generation
    enable = 0;
    #100; // Wait for some time

    // Re-enable the random number generation
    enable = 1;
    #100; // Wait for some time

    // Finish simulation
    $finish;
end

// Monitor
always @(posedge clk) begin
    $display("Time=%0t, Random Number=%0d", $time, rand_num);
end

endmodule
