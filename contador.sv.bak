module contador(input logic clk,rst,enable, signal, output logic [4:0] result);
	reg [4:0] numActual =5'b00001; //numero que simboliza la casilla seleccionada, siempre inicia
	//en el primer digito, es un registro.
	always_ff @(posedge clk) begin
		if(rst)begin
			numActual <=5'b00001;
		end
		if(signal and enable)begin//si el boton fue presionado.
			numActual+= 5'b00001;
			if(numActual > 5'b11001)begin //si es mayor que 25, lo setea en 1
				numActual <=5'b00001;
			end
		end
   end
	assign result = numActual; //asigna el resultado
endmodule 