module contador_barcos_selec#(parameter= numBarcos)(input logic clk,rst,enable,signal,output logic [3:0] result, 
output logic FSM_next_State);
	reg [3:0]contador_de_select = 3'b001; //al ser maximo 5 barcos
	always_ff @(posedge clk) begin
		if(rst)begin
			contador_de_select = 3'b001;
		end
		else begin
			if(signal and (contador_de_select < numBarcos) and enable)begin 
				contador_de_select+=3'b001;
			end
		end
   end	
	assign result = contador_de_select
endmodule 